{
  "manifest_version": 2,

  "name": "Quiet Quote",
  "description": "This extension provides you with a fresh, inspirational quote every time you click!",
  "version": "0.6.4",
  "author": "Robert Duplock",

  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
   "default_popup": "popup.html",
   "default_title": "Quiet Quote"
  },
  "icons": { 
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png" 
  },
  "permissions": [
   "http://api.forismatic.com/api/"
   ]
}